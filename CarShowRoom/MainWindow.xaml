<Window x:Class="CarShowRoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"   
        xmlns:intr="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d ignore"
        Height="280"
        Width="320"
        Title="Start window"
        DataContext="{Binding Main, Source={StaticResource Locator}}" ResizeMode="NoResize">
    <intr:Interaction.Triggers>
        <intr:EventTrigger EventName="Loaded">
            <intr:InvokeCommandAction Command="{Binding WindowLoaded}"/>
        </intr:EventTrigger>
    </intr:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot"> 
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Bottom" Height="16">
                <ToolBar>
                    <TextBlock  
                   FontWeight='Regular' 
                   FontSize="12"
                   Foreground="LightSeaGreen"
                   Text="{Binding ToolBarDescriptionItem}"
                   TextWrapping="Wrap" />
                    <TextBlock
                   FontWeight='Regular'  
                   FontSize="12"
                   Text="{Binding ToolBarValueItem}"
                   Foreground="Orange"
                   TextWrapping="Wrap" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        <Image Margin="0,20,0,16" Stretch="Fill">
            <Image.Source>
                <BitmapImage UriSource="C:\Users\Yulian\Desktop\EntityProject\CarShowRoom\CarShowRoom\wall.jpg"/>
            </Image.Source>
        </Image>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="auto">
                <MenuItem Header="_File" FontSize="13" Foreground="Aquamarine" Height="21">
                    <MenuItem Header="_New" FontSize="13" Foreground="Coral" Height="21"/>
                    <MenuItem Header="_Open" FontSize="13" Foreground="BlueViolet" Height="21"/>
                    <MenuItem Header="_Save" FontSize="13" Foreground="LimeGreen" Height="21"/>
                    <Separator />
                    <MenuItem Header="_Exit" FontSize="13" Foreground="Crimson" Height="21"/>
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        

    </Grid>
</Window>
